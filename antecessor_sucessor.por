programa
{
	
	funcao inicio()
	{
		inteiro a, antecessor, sucessor

		escreva ("Digite o numero: ")
		leia (a)

		antecessor = a-1
		sucessor = a+1 

		escreva (" O sucessor do numero ", a, " é ", sucessor, " e o antecessor dele é ", antecessor, "\n")
	}
}
